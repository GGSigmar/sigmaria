{% extends "base/base.html.twig" %}

{% block content %}
    <div class="col-md-12">
        {% include "base/utilities/entity_show_header.html.twig" with {'entity': culture} %}
    </div>
    <div class="col-md-9 pt-2 pb-2">
        {% include 'core/paragraph/paragraph_entity_display.html.twig' with {'entity': culture} %}
    </div>
    <div class="col-md-3 sidebar sidebar-right color-blood text-justify pt-2 pb-2">
        <h3>Common ancestries</h3>
        <p class="mb-4">
            {% if culture.commonAncestries is empty %}
                None
            {% else %}
                {% for ancestry in culture.commonAncestries %}
                    {% include "base/badges/entity_slug_show_badge.html.twig" with {'entityName': 'ancestry', 'entitySlug': ancestry.slug} %} {{ ancestry.name }}
                    {% if not loop.last %}
                        <br />
                    {% endif %}
                {% endfor %}
            {% endif %}
        </p>
        <h3>Common classes</h3>
        <p class="mb-4">
            {% if culture.commonClasses is empty %}
                None
            {% else %}
                {% for class in culture.commonClasses %}
                    {{ class.name }}

                    {% if not loop.last %}
                        <br />
                    {% endif %}
                {% endfor %}
            {% endif %}
        </p>
        <h3>Common backgrounds</h3>
        <p class="mb-4">
            {% if culture.commonBackgrounds is empty %}
                None
            {% else %}
                {% for background in culture.commonBackgrounds %}
                    {% include "base/badges/entity_slug_show_badge.html.twig" with {'entityName': 'background', 'entitySlug': background.slug} %} {{ background.name }}

                    {% if not loop.last %}
                        <br />
                    {% endif %}
                {% endfor %}
            {% endif %}
        </p>
        <h3>Common languages</h3>
        <p class="mb-4">
            {% if culture.commonLanguages is empty %}
                None
            {% else %}
                {% for language in culture.commonLanguages %}
                    {% include "base/badges/entity_slug_show_badge.html.twig" with {'entityName': 'language', 'entitySlug': language.slug} %} {{ language.name }}

                    {% if not loop.last %}
                        <br />
                    {% endif %}
                {% endfor %}
            {% endif %}
        </p>
    </div>

    {% include 'core/feat/tabbed_entity_display.html.twig'
        with {
        'displayTitle': 'Atuty kulturowe',
        'entityName': 'culture',
        'entity': culture
        }
    %}
{% endblock %}