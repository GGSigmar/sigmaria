{% extends "base/base_list.html.twig" %}

{% block list_title %}
    Dziedzictwa
{% endblock %}

{% block table_headers %}
    <th class="align-middle">Nazwa</th>
    <th class="align-middle">Rasa</th>
    <th class="align-middle">Wartość</th>
{% endblock %}

{% block table_rows %}
    {% for heritage in heritages %}
        <tr class="{% include "base/utilities/inactive_entity_row_classes.html.twig" with {'entity': heritage} %}">
            <td class="align-middle">{{ heritage.name }}</td>
            <td class="align-middle">
                {% include "base/badges/entity_show_badge.html.twig" with {'entityName': 'ancestry', 'entityId': heritage.ancestry.id} %} {{ heritage.ancestry.name }}
            </td>
            <td class="align-middle">
                {{ heritage.value }}
                {% if heritage.value != heritage.ancestry.heritageValue %}
                    {% include 'base/badges/warning_badge.html.twig' %}
                {% endif %}
            </td>
            <td class="align-middle text-nowrap">
                {% include "base/buttons/entity_show_button.html.twig" with {'entityName': entityName, 'entity': heritage} %}
                {% include "base/buttons/entity_edit_button.html.twig" with {'entityName': entityName, 'entity': heritage} %}
                {% include "base/buttons/entity_delete_buttons.html.twig" with {'entityName': entityName, 'entity': heritage} %}
            </td>
        </tr>
    {% endfor %}
{% endblock %}
