{% trans_default_domain 'FOSUserBundle' %}

<h1>Logowanie</h1>

{% if error %}
    <div class="alert alert-danger">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>

    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control"type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>

    <div class="form-group">
        <label for="remember_me">
            <input class="checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on" />
            {{ 'security.login.remember_me'|trans }}
        </label>
    </div>

    <button class="btn btn-primary" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }} <i class="fas fa-lock"></i></button>
</form>
