{% if entity.source %}
    {% set source = entity.source %}
    <div class="border-top border-white">
        <b>Źródło:</b>
        <a href="{{ source.productLink }}" class="badge badge-primary border border-white" target="_blank">
            <abbr title="{{ source.copyrightNotice }} {% if entity.pagesInfo %}{{ entity.pagesInfo }}{% endif %}">
                {{ source.name }}
            </abbr>
        </a>
    </div>
{% endif %}