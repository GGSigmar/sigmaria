{% extends "base/base_list.html.twig" %}

{% block list_title %}
    <h1>Atrybuty</h1>
{% endblock %}

{% block table_headers %}
    <th>Nazwa</th>
    <th>Kategoria</th>
    <th>Akcje</th>
{% endblock %}

{% block table_rows %}
    {% for trait in traits %}
        <tr>
            <td class="align-middle">{{ trait.name }}</td>
            <td class="align-middle">{{ trait.category.name }}</td>
            <td class="align-middle">
                {% set entityName = 'core_trait' %}

                {% include "base/buttons/entity_edit_button.html.twig" with {'entityName': entityName, 'entityId': trait.id} %}
                {% include "base/buttons/entity_delete_button.html.twig" with {'entityName': entityName, 'entityId': trait.id} %}
            </td>
        </tr>
    {% endfor %}
{% endblock %}
