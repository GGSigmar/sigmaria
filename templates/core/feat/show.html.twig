{% extends "base/base.html.twig" %}

{% block content %}
    <div class="col-md-12">
        <div class="mb-4">
            <h1>
                {{ feat.name }}
                <div class="float-right">
                    {% if is_granted('ROLE_ADMIN') %}
                        {% include "base/buttons/entity_edit_button.html.twig" with {'entityName': entityName, 'entity': feat} %}
                    {% endif %}
                    {% include "base/buttons/entity_list_button.html.twig" with {'entityName': entityName} %}
                </div>
            </h1>

            {% include "base/utilities/entity_release_note.html.twig" with {'entity': feat} %}
        </div>
    </div>

    {% include "core/feat/entry.html.twig" with {'feat': feat} only %}
{% endblock %}