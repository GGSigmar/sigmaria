<div class="col-md-12 mt-2 mb-2">
    <h2 class="d-inline">
        {{ displayTitle }}
    </h2>
    {% if isAdmin %}
        {% include 'base/buttons/entity_display_create_button.html.twig'
            with
            {
                'baseEntityName': entityName,
                'subEntityName': 'feat',
                'baseEntity': entity
            }
        %}
    {% endif %}
</div>

{% if isAdmin %}
    {% set feats = entity.groupedFeats %}
{% else %}
    {% set feats = entity.activeFeats %}
{% endif %}

{% if feats is empty %}
    <div class="col-md-12 mb-4">
        None
    </div>
{% else %}
    {% include "core/feat/tabbed_display.html.twig" with {'feats': feats} %}
{% endif %}