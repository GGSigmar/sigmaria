{% extends "base/base_list.html.twig" %}

{% block list_title %}
    Character Creation Steps
{% endblock %}

{% block table_headers %}
    <th>Name</th>
    <th>Sort Order</th>
    <th>Actions</th>
{% endblock %}

{% block table_rows %}
    {% for step in steps %}
        <tr class="{% include "base/utilities/inactive_entity_row_classes.html.twig" with {'entity': step} %}">
            <td class="align-middle">{{ step.name }}</td>
            <td class="align-middle">{{ step.sortOrder }}</td>
            <td class="align-middle text-nowrap">
                {% include "base/buttons/entity_list_edit_button.html.twig" with {'entityName': entityName, 'entity': step} %}
                {% include "base/buttons/entity_delete_buttons.html.twig" with {'entityName': entityName, 'entity': step} %}
            </td>
        </tr>
    {% endfor %}
{% endblock %}
