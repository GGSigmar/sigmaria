{% extends "base/base_list.html.twig" %}

{% block list_title %}
    Blog Posts
{% endblock %}

{% block top_right_buttons %}{% endblock %}

{% block table_headers %}
    <th>Title</th>
    <th>Actions</th>
{% endblock %}

{% block table_rows %}
    {% for post in blogPosts %}
        <tr>
            <td class="align-middle">{{ post.name }}</td>
            <td class="align-middle text-nowrap">
                {% include "base/buttons/entity_list_edit_button.html.twig" with {'entityName': entityName, 'entity': post} %}
                {% include "base/buttons/entity_delete_buttons.html.twig" with {'entityName': entityName, 'entity': post} %}
            </td>
        </tr>
    {% endfor %}
{% endblock %}
