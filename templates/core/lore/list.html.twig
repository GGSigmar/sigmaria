{% extends "base/base_list.html.twig" %}

{% block list_title %}
    Lores
{% endblock %}

{% block table_headers %}
    <th>Name</th>
    <th>Versatility</th>
    <th>Actions</th>
{% endblock %}

{% block table_rows %}
    {% for lore in lores %}
        <tr class="{% include "base/utilities/inactive_entity_row_classes.html.twig" with {'entity': lore} %}">
            <td class="align-middle">{{ lore.longName }}</td>
            <td class="align-middle">
                {% if lore.isVersatile %}
                    <i class="far fa-check-circle"></i>
                {% endif %}
            </td>
            <td class="align-middle text-nowrap">
                {% include "base/buttons/entity_list_edit_button.html.twig" with {'entityName': entityName, 'entity': lore} %}
                {% include "base/buttons/entity_delete_buttons.html.twig" with {'entityName': entityName, 'entity': lore} %}
            </td>
        </tr>
    {% endfor %}
{% endblock %}
